<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0" />
      <Pane prefHeight="700.0" prefWidth="900.0">
         <children>
            <Button fx:id="solveC" layoutX="561.0" layoutY="14.0" mnemonicParsing="false" onAction="#solveComplex" prefHeight="80.0" prefWidth="300.0" text="Solve Complex" />
            <Button fx:id="solveR" layoutX="561.0" layoutY="99.0" mnemonicParsing="false" onAction="#solveReal" prefHeight="80.0" prefWidth="300.0" text="Solve Real" />
            <CheckBox fx:id="sbsS" layoutX="561.0" layoutY="184.0" mnemonicParsing="false" onAction="#sbsSolution" prefHeight="80.0" prefWidth="300.0" text="Show Step-by-Step Solution" />
            <TextArea fx:id="input" layoutX="14.0" layoutY="14.0" prefHeight="250.0" prefWidth="354.0" promptText="input" text="//Example:&#10;2, 3, 4, 5;&#10;4, 1, 6, 7;&#10;8, 3, 9, 1;" />
            <Label layoutX="383.0" layoutY="33.0" prefHeight="21.0" prefWidth="152.0" text="Number of Unknowns:" />
            <TextField fx:id="Unknowns" layoutX="383.0" layoutY="68.0" prefHeight="31.0" prefWidth="152.0" />
            <TextArea fx:id="output" layoutX="14.0" layoutY="277.0" prefHeight="400.0" prefWidth="850.0" />
            <CheckBox fx:id="exp" layoutX="413.0" layoutY="169.0" mnemonicParsing="false" onAction="#expSet" text="Polar form" />
            <CheckBox fx:id="abi" layoutX="413.0" layoutY="214.0" mnemonicParsing="false" onAction="#abiSet" text="Normal form" />
            <Label contentDisplay="CENTER" layoutX="409.0" layoutY="129.0" prefHeight="21.0" prefWidth="110.0" text="Complex forms:" textAlignment="CENTER" />
         </children>
      </Pane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
